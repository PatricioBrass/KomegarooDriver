<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/content_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:showIn="@layout/app_bar_main">

    <fragment android:id="@+id/map"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              class="com.google.android.gms.maps.MapFragment"></fragment>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <AutoCompleteTextView
            android:id="@+id/etOrigin"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:paddingRight="40dip"
            android:inputType="textCapSentences"
            android:hint="Origen"
            android:drawableLeft="@mipmap/ic_inicioban"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="35dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@android:color/white"
            android:textColorLink="@android:color/holo_blue_light"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"/>

        <AutoCompleteTextView
            android:id="@+id/etDestination"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:paddingRight="40dip"
            android:inputType="textCapSentences"
            android:hint="Destino"
            android:drawableLeft="@mipmap/ic_destinoban"
            android:drawablePadding="0dp"
            app:layout_constraintRight_toRightOf="@+id/etOrigin"
            android:layout_marginTop="101dp"
            app:layout_constraintTop_toBottomOf="@+id/etOrigin"
            app:layout_constraintLeft_toLeftOf="@+id/etOrigin"
            android:background="@android:color/white"
            android:textColorLink="@android:color/holo_blue_light"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true" android:layout_alignParentStart="true">

        <Button
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:text="EstimaciÃ³n tarifa"
            android:id="@+id/btnFindPath"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:drawableLeft="@mipmap/ic_pay"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColorLink="@android:color/holo_blue_bright"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:background="@color/colorPrimary"
            android:layout_marginBottom="35dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>

        <ImageButton
            app:srcCompat="@mipmap/places_ic_clear"
            android:id="@+id/imageButton2"
            tools:layout_editor_absoluteY="40dp"
            tools:layout_editor_absoluteX="276dp"
            android:layout_marginTop="37dp"
            android:background="@android:color/transparent"
            android:layout_width="30dp"
            android:layout_height="30dp" android:layout_below="@+id/imageButton"
            android:layout_alignStart="@+id/imageButton"/>
        <ImageButton
            android:layout_width="30dp"
            app:srcCompat="@mipmap/places_ic_clear"
            android:id="@+id/imageButton"
            tools:layout_editor_absoluteY="40dp"
            tools:layout_editor_absoluteX="276dp"
            android:layout_marginTop="45dp"
            android:layout_marginStart="21dp"
            android:background="@android:color/transparent"
            android:layout_height="30dp" android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/btnFindPath"/>


    </RelativeLayout>


</RelativeLayout>