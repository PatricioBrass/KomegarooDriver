<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_perfil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.driver.hp.komegaroodriver.Fragment.MenuLaterales.PerfilActivity"
    android:orientation="vertical" android:weightSum="1">
    <Button
        android:layout_width="33dp"
        android:layout_height="30dp" android:id="@+id/btnPerfil"
        android:background="@mipmap/ic_back" android:layout_gravity="top|left"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_height="wrap_content" android:weightSum="1" android:layout_weight="0.07">
        <TextView
            android:text="Perfil"
            android:layout_width="352dp"
            android:layout_height="wrap_content" android:id="@+id/textView7"
            android:textStyle="normal|bold" android:textSize="18sp" android:textAlignment="center"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="0.08"/>
        <ImageView
            android:layout_width="163dp"
            android:layout_height="127dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"  app:srcCompat="@mipmap/ic_persona"
            android:id="@+id/imgPhoto"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="160dp"
                android:layout_height="match_parent">
                <TextView
                    android:text="Nombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView16"
                    android:textSize="17sp"/>
                <TextView
                    android:text="Juan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/txtNombre"
                    android:textStyle="normal|bold" android:textSize="22sp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="Apellido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView14"
                    android:layout_weight="0.93" android:textSize="17sp"/>
                <TextView
                    android:text="Pérez"
                    android:layout_width="246dp"
                    android:layout_height="wrap_content" android:id="@+id/txtApellido"
                    android:textStyle="normal|bold"
                    android:textAlignment="viewStart" android:textSize="22sp"
                    android:layout_gravity="bottom" android:layout_weight="0.81"/>
            </LinearLayout>
        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="0.09"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView11"
                    android:textAlignment="viewStart"
                    android:textSize="17sp" android:text="Número de teléfono"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/txtNumero"
                    android:textStyle="normal|bold" android:textAlignment="viewStart"
                    android:textSize="22sp" android:text="+56987654321"/>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="19dp"/>
                <TextView
                    android:text="Correo electrónico"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView13"
                    android:textSize="17sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/txtCorreo"
                    android:textStyle="normal|bold" android:textAlignment="viewStart"
                    android:textSize="22sp" android:text="correo@correo.cl"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
