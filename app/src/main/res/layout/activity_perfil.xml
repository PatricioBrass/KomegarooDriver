<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_perfil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.driver.hp.komegaroodriver.Fragment.MenuLaterales.PerfilActivity"
    android:orientation="vertical" android:weightSum="1">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
    >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@color/white"
            app:titleTextColor="@color/colorAccent"
            app:theme="@style/ThemeToolbar" android:weightSum="1">
            <Button
                android:layout_width="33dp"
                android:layout_height="30dp" android:id="@+id/btnPerfil"
                android:background="@mipmap/close" android:layout_gravity="top|left"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="P E R F I L"
                android:layout_gravity="center"
                android:id="@+id/toolbar_title" android:layout_weight="0.19" android:textSize="18sp"
                android:textColor="@color/colorAccent" android:fontFamily="sans-serif"
                android:textStyle="normal|bold"/>
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>


    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/progressBarPerfil" style="@style/Widget.AppCompat.ProgressBar"
        android:visibility="gone" android:padding="140dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent" android:orientation="vertical" android:weightSum="1"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin" android:id="@+id/perfil_form">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="80dp" android:layout_margin="5dp">
                <ImageView
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter" app:srcCompat="@mipmap/ic_persona"
                    android:id="@+id/imgPhoto" android:layout_height="match_parent"
                    android:layout_weight="0.31" android:layout_gravity="center"
                    android:layout_width="75dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="131dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.08" android:layout_marginLeft="45dp">
                    <TextView
                        android:text="Juan"
                        android:layout_width="match_parent"
                        android:id="@+id/txtNombre"
                        android:textSize="18sp"
                        android:gravity="center" android:textColor="@android:color/black"
                        android:layout_height="40dp"
                        android:ellipsize="end"
                        android:maxLines="1"/>
                    <TextView
                        android:text="Pérez"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/txtApellido"
                        android:textSize="18sp"
                        android:gravity="center" android:layout_gravity="center"
                        android:textColor="@android:color/black"
                        android:ellipsize="end"
                        android:maxLines="1"/>
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                app:srcCompat="@drawable/linea"
                android:id="@+id/imageView6"
                android:layout_height="20dp" android:layout_margin="5dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="100dp" android:layout_margin="5dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center" android:layout_height="50dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@mipmap/arroba"
                        android:id="@+id/imageView7"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/txtCorreo"
                        android:textSize="18sp" android:text="correo@correo.cl"
                        android:gravity="center" android:layout_gravity="center"
                        android:textColor="@android:color/black"
                        android:ellipsize="end"
                        android:maxLines="1"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@mipmap/numerote"
                        android:id="@+id/imageView8"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/txtNumero"
                        android:textSize="18sp" android:text="+56987654321"
                        android:gravity="center" android:layout_gravity="center"
                        android:textColor="@android:color/black"
                        android:ellipsize="end"
                        android:maxLines="1"/>
                </LinearLayout>
            </LinearLayout>
            <Button
                android:text="e d i t a r"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btnEdit"
                android:layout_weight="0.04" android:background="@color/colorAccent"
                android:textColor="@android:color/white" android:layout_margin="5dp"/>
            <ImageView
                android:layout_width="match_parent"
                app:srcCompat="@drawable/linea"
                android:id="@+id/imageView"
                android:layout_height="20dp" android:layout_margin="5dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_weight="0.32" android:layout_margin="5dp" android:layout_height="60dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="match_parent" android:weightSum="1"
                    android:layout_width="100dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/textView11"
                        android:layout_weight="0.81" android:textAlignment="center"
                        android:textColor="@color/black" android:text="VIAJES REALIZADOS"
                        android:gravity="center"/>
                    <TextView
                        android:text="0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/txtTrips"
                        android:textAlignment="center" android:textColor="@color/black"
                        android:gravity="bottom" android:textSize="18sp"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:gravity="bottom|center"
                    android:weightSum="1">
                    <TextView
                        android:text="CALIFICACIÓN"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView9"
                        android:layout_weight="1.03" android:textAlignment="center"
                        android:textColor="@color/black" android:gravity="center"/>
                    <RatingBar
                        android:id="@+id/ratingBar"
                        android:layout_width="wrap_content"
                        android:numStars="5"
                        android:stepSize="1.0"
                        android:rating="2.0"
                        android:theme="@style/RatingBar"
                        style="@style/Widget.AppCompat.RatingBar.Indicator"
                        android:layout_height="35dp"
                        android:isIndicator="true"/>
                </LinearLayout>
            </LinearLayout>
            <Button
                android:text="c e r r a r  s e s i ó n"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btnSesionClose"
                android:layout_weight="0.04" android:background="@color/colorAccent"
                android:textColor="@android:color/white" android:layout_margin="5dp"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
