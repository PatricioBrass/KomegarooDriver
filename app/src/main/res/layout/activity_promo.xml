<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_promo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuLaterales.PromoActivity"
    android:orientation="vertical">
    <Button
        android:layout_width="33dp"
        android:layout_height="30dp" android:id="@+id/btnPromo"
        android:background="@mipmap/ic_back" android:layout_gravity="top|left"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="Promociones"
            android:layout_width="352dp"
            android:layout_height="wrap_content" android:id="@+id/textView7"
            android:textStyle="normal|bold" android:textSize="18sp" android:textAlignment="center"/>
    </LinearLayout>

</LinearLayout>
