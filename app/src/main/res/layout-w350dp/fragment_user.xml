<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:clickable="true"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                tools:context="com.driver.hp.komegaroodriver.Fragment.UserFragment"
                android:orientation="vertical" android:id="@+id/userData"
                android:background="@color/white">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true" android:id="@+id/exit" android:background="@drawable/transm"
        android:layout_alignParentTop="true" android:layout_alignParentStart="true"
        android:gravity="center">
        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:clickable="true"
                      android:orientation="vertical"
                      android:background="@color/white" android:layout_margin="15dp">

            <Button
                android:id="@+id/buttonExit"
                android:background="@mipmap/close" android:layout_width="33dp"
                android:layout_height="30dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView2"
                    android:text="Dirección"
                    android:textSize="20sp" android:textColor="#262626"
                    android:textStyle="normal|bold" android:gravity="center"
                    android:layout_marginBottom="5dp"/>
                <View
                    android:layout_width="fill_parent"
                    android:background="@color/morado" android:layout_marginRight="40dp"
                    android:layout_height="2dp" android:layout_marginLeft="40dp"/>
                <TextView
                    android:text="Dirección"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp" android:id="@+id/txtDirecData"
                    android:ellipsize="end"
                    android:maxLines="1" android:gravity="center" android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView4"
                    android:text="Block, depto, etc"
                    android:textSize="20sp" android:textColor="#262626"
                    android:layout_marginTop="5dp"
                    android:textStyle="normal|bold" android:gravity="center"
                    android:layout_marginBottom="5dp"/>
                <View
                    android:layout_width="fill_parent"
                    android:background="@color/morado" android:layout_marginRight="40dp"
                    android:layout_height="2dp" android:layout_marginLeft="40dp"/>
                <TextView
                    android:text="Sin número"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/txtNumberData"
                    android:textSize="16sp"
                    android:ellipsize="end"
                    android:maxLines="1" android:gravity="center" android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_marginTop="10dp"
                    android:id="@+id/onePhone">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/textView12"
                        android:textColor="#262626" android:textSize="20sp"
                        android:text="Cliente"
                        android:textStyle="normal|bold"
                        android:gravity="center"/>
                    <View
                        android:layout_width="fill_parent"
                        android:background="@color/morado" android:layout_marginRight="40dp"
                        android:layout_height="2dp" android:layout_marginLeft="40dp"/>
                    <TextView
                        android:text="Juan Pérez"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/txtNombreData"
                        android:textSize="18sp" android:textColor="#262626"
                        android:gravity="center" android:layout_marginTop="10dp"
                    />
                    <TextView
                        android:text="87654321"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/txtNumeroData"
                        android:textSize="18sp"
                        android:gravity="center" android:layout_marginTop="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:visibility="gone"
                    android:layout_marginLeft="15dp" android:layout_marginRight="15dp"
                    android:layout_marginBottom="5dp" android:layout_marginTop="5dp"
                    android:id="@+id/twoPhone">
                    <TextView
                        android:text="Números de Contacto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView8"
                        android:textColor="#262626" android:textSize="20sp"
                        android:textStyle="normal|bold" android:gravity="center"
                        android:layout_marginTop="5dp" android:layout_marginBottom="5dp"/>
                    <View
                        android:layout_width="fill_parent"
                        android:background="@color/morado" android:layout_marginRight="40dp"
                        android:layout_height="2dp" android:layout_marginLeft="40dp"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_marginTop="10dp">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_height="match_parent" android:layout_width="156dp"
                            android:layout_marginRight="5dp"
                            android:id="@+id/emisorCall"
                            android:clickable="true">
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    app:srcCompat="@mipmap/call"
                                    android:id="@+id/imageView4" android:layout_height="30dp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" android:id="@+id/textView19"
                                    android:textColor="#262626" android:textSize="18sp"
                                    android:text="Cliente"
                                    android:textStyle="normal|bold" android:layout_weight="1"
                                    android:gravity="left|center"/>
                            </LinearLayout>
                            <View
                                android:layout_width="fill_parent"
                                android:background="@color/morado" android:layout_marginRight="10dp"
                                android:layout_height="2dp" android:layout_marginLeft="10dp"/>
                            <TextView
                                android:text="Emisor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/txtEmisor"
                                android:textSize="18sp" android:textColor="#262626"
                                android:gravity="center" android:layout_marginTop="5dp"
                                android:ellipsize="end"
                                android:maxLines="1"/>
                            <TextView
                                android:text="879654321"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/txtPhoneEmisor"
                                android:textSize="18sp"
                                android:gravity="center"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:layout_marginLeft="5dp"
                            android:id="@+id/receptorCall"
                            android:clickable="true">
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    app:srcCompat="@mipmap/call"
                                    android:id="@+id/imageView2" android:layout_height="30dp"/>
                                <TextView
                                    android:text="Receptor"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" android:id="@+id/textView13"
                                    android:textSize="18sp"
                                    android:textColor="#262626" android:textStyle="normal|bold"
                                    android:layout_weight="1" android:gravity="left|center"/>
                            </LinearLayout>
                            <View
                                android:layout_width="fill_parent"
                                android:background="@color/morado" android:layout_marginRight="10dp"
                                android:layout_height="2dp" android:layout_marginLeft="10dp"/>
                            <TextView
                                android:text="Receptor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/txtReceptor"
                                android:textSize="18sp" android:textColor="#262626"
                                android:gravity="center" android:layout_marginTop="5dp"
                                android:ellipsize="end"
                                android:maxLines="1"/>
                            <TextView
                                android:text="Sin número"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/txtPhoneReceptor"
                                android:textSize="18sp"
                                android:gravity="center"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView3"
                    android:text="Comentarios"
                    android:textSize="20sp" android:textColor="#262626"
                    android:layout_marginTop="5dp"
                    android:textStyle="normal|bold" android:gravity="center"
                    android:layout_marginBottom="5dp"/>
                <View
                    android:layout_width="fill_parent"
                    android:background="@color/morado"
                    android:layout_height="2dp" android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/txtComentData"
                    android:textSize="16sp"
                    android:ellipsize="end"
                    android:maxLines="2" android:text="Sin comentarios" android:gravity="center"
                    android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp" android:layout_marginTop="10dp"
                    android:layout_height="50dp"/>
                <Button
                    android:text="Emergencia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btnEmergencia"
                    style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="18sp" android:textColor="@color/colorAccent"
                    android:visibility="gone"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="55dp" android:gravity="bottom|center"
                    android:layout_gravity="bottom" android:id="@+id/btnTwo">
                    <Button
                        android:layout_width="173dp"
                        android:layout_height="match_parent" android:id="@+id/btnCancelData"
                        style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
                        android:text="Cancelar Viaje"
                        android:background="@color/white"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textSize="20sp" android:textColor="@color/colorAccent"
                    />
                    <Button
                        android:layout_width="174dp"
                        android:layout_height="match_parent" android:id="@+id/btnContactarData"
                        android:text="Contactar"
                        style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
                        android:background="@color/white"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textSize="20sp" android:textColor="@color/colorAccent"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>